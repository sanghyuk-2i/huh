{
  "name": "@sanghyuk-2i/huh-core",
  "version": "0.1.0",
  "description": "Huh - error content JSON DSL core: types, parsing, variable substitution, validation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.global.js",
  "jsdelivr": "./dist/index.global.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanghyuk-2i/huh.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/sanghyuk-2i/huh#readme",
  "bugs": {
    "url": "https://github.com/sanghyuk-2i/huh/issues"
  },
  "license": "MIT",
  "author": "sanghyuk-2i",
  "keywords": ["error", "error-handling", "json", "dsl", "i18n", "template"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "2 KB"
    },
    {
      "path": "dist/index.global.js",
      "limit": "2 KB"
    }
  ],
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
